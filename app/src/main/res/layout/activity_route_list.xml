<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_route_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
   >
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/message"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:padding="2dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dir_start"
                    />
                <TextView
                    android:id="@+id/start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="我的位置"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dir_end"
                    />
                <TextView
                    android:id="@+id/end"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="大保健"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/each"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/eachother"
            android:background="#33ffffff"
            android:padding="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bar"
        android:layout_below="@+id/message"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/bus"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="公交"
            />
        <TextView
            android:id="@+id/driver"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="自驾"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/walk"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="步行"
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/bar"
        >
        <View
            android:id="@+id/index1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff0000"
            />
        <View
            android:id="@+id/index2"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff0000"
            />
        <View
            android:id="@+id/index3"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff0000"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hint"
        >

    </ListView>
    <TextView
        android:visibility="gone"
        android:id="@+id/noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="该路线没有出行方案哟，快选择其他方案吧！"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="18sp"
        />
</RelativeLayout>
